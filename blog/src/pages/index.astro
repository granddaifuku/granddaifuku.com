---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import { SITE_TITLE } from "../config";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | Web Ninja`} slot="meta" />
  <Fragment slot="main">
	  <section class="mb-8">
		  <div class="mb-6">
			  <h1
				  class="font-bold text-text-heading text-center text-4xl md:text-5xl pt-4 pb-2 overflow-hidden"
			  >
				  <span
					  class="
							 bg-gradient-to-bl bg-no-repeat bg-bottom bg-[length:90%_40%]
							 from-primary-blue to-primary-blue dark:from-primary-blue dark:to-primary-blue
							 "
				  >
					  Yudai Fukushima
				  </span>
			  </h1>
			  <!-- <p class="text-2xl pb-4">Web Developer. OSS Wizard. Blogger.</p> -->
		  </div>
		  <div>
			  <p class="mb-5">
				  Hello! I am a full-time software engineer living in Tokyo, Japan. I have a master's degree in Engineering and am interested in various computer technologies.
			  </p>
			  <p class="text-center whitespace-nowrap overflow-auto">
				  <code class="py-1 px-2">npx create-blogster@latest --theme bubblegum</code>
			  </p>
		  </div>
	  </section>
  </Fragment>
</PageLayout>
